
<div class="container-fluid">
  <div class="col-sm-9">
    <h4><small>RECENT POSTS</small></h4>
    <hr>
    <% @posts.each do |post| %>
        <div class="well well-sm"
        <h3><small><%= post.title.upcase %></small></h3>
        <h5><i class="fa fa-clock-o"></i>
        <%=  post.user.name  %>
        <%=  post.created_at.to_s(:short) %>
        </h5>
        <p><%= post.body %></p>
        <%= link_to "Read More", post_path(post), :class => 'btn btn-info btn-sm' %>
      </div>
        <hr>

    <% end %>
    <br><br>
</div>
