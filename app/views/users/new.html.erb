
<div class="container-fluid">
  <div class="col-sm-9">
    <h3>Sign Up</h3>
    <hr>
    <%= form_for @user do |f| %>
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <div class="alert alert-danger">
            The form contains <%= pluralize(@user.errors.count, "error") %>.
          </div>
          <ul>
            <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

        <div class="field">
          <%= f.label :name %><br/>
          <%= f.text_field(:name, {:class => 'form-control', :placeholder => 'Enter name'}) %>
        </div><br>
        <div class="field">
          <%= f.label :email %><br/>
          <%= f.text_field(:email, {:class => 'form-control', :placeholder => 'Enter email'}) %>
        </div><br>
        <div class="field">
          <%= f.label :password %><br/>
          <%= f.password_field(:password, {:class => 'form-control', :placeholder => 'Enter password'}) %>
        </div><br>
        <div class="field">
          <%= f.label :password_confirmation %><br/>
          <%= f.password_field(:password_confirmation, {:class => 'form-control', :placeholder => 'Enter password confirmation'}) %>
        </div><br>
        <div class="actions"><%= f.submit "Create Account", {:class => 'btn btn-primary'} %></div>
        <hr>
    <% end %>
    <br>
    <br>
  </div>
</div>
