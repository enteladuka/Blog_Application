<h2> <%= @post.title %></h2>
<p> <%= @post.body %> </p>
<br>
<% if logged_in? %>
<%= link_to "Edit", edit_post_path(@post), :class => 'btn btn-light' %>
<%= link_to "Delete", post_path(@post),
                      method: :delete,
                      data: {confirm: 'Are you sure?'},
                      :class => 'btn btn-danger' %>
<hr>
<% end %>

<%= render 'comments/comments' %>

<% if logged_in? %>
<%= render 'comments/form' %>
<% end %>
