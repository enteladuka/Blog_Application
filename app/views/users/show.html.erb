
<div class="container-fluid">
  <div class="col-sm-9">
    <h3> <%= @user.name %>'s Profile </h3>
    <hr>
    <%= @user.name %>, <%= @user.email %>
  </br>
  </br>
  </br>
    <% if @user.posts.any? %>
      <h3>My Posts(<%= @user.posts.count %>)</h3>
      <hr>
        <% @user.posts.each do |post| %>
            <div class="well well-sm"
            <h3><small><%= post.title.upcase %></small></h3>
            <h5><i class="fa fa-clock-o"></i></span>
            <%= post.user.name %>
            <%=  post.created_at.to_s(:short) %>
            </h5>
            <p><%= post.body %></p>
            <%= link_to "Read More", post_path(post), :class => 'btn btn-info btn-sm' %>
          </div>
            <hr>
        <% end %>
      <% end %>
</div>
</div>


</br>
</br>
